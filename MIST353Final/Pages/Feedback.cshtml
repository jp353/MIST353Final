@page
@model FeedbackModel
@{
    ViewData["Title"] = "Feedback";
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Customer Feedback</title>
    </head>
    <body>
        <h1>Customer Feedback</h1>
        <p>Your feedback is important to us. We appreciate your input!</p>
    </body>
    </html>

    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Feedback Form</title>
    </head>
    <body>
        <h1>Feedback Form</h1>

        <form>
            <div>
                <label for="rating">Rating Score (1-10):</label>
                <input type="number" id="rating" name="rating" min="1" max="10" required>
            </div>

            <div>
                <label for="comment">Rating Comment (up to 200 characters):</label>
                <textarea id="comment" name="comment" rows="4" maxlength="200" required></textarea>
            </div>

            <button type="submit">Submit Feedback</button>
        </form>
    </body>
    </html>

}
